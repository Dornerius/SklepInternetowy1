<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SklepIntranet</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/lib/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SklepIntranet.styles.css" asp-append-version="true" />
</head>
<body>
    <a class="background-image">
        <img src="~/images/background.jpg" alt="Background Image">
    </a>
    <nav class="light-blue" role="navigation">
        <a id="logo-container" href="#" class="brand-logo light-blue">
            <img src="~/images/logo.png" alt="Logo Sklepu" style="height: 50px; margin-right: 10px; vertical-align: middle;">
            TwójSklep.pl
        </a>
            <ul class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                <li>@Html.ActionLink("Aktualności", "Index", "News")</li> 
                <li>@Html.ActionLink("Rodzaj towaru", "Index", "ProductType")</li>
                <li>@Html.ActionLink("Towar", "Index", "Product")</li>
                <li>@Html.ActionLink("Użytkownicy", "Index", "Users")</li> 
                <li>@Html.ActionLink("Klienci", "Index", "Clients")</li>               
                <li>@Html.ActionLink("Faktury", "Index", "Factures")</li>
                <li>@Html.ActionLink("Strona", "Index", "Page")</li>
                
            </ul>

            <ul id="nav-mobile" class="light-blue side-nav">
                <li>@Html.ActionLink("Strona główna", "Index", "Home", null, new { @style = "color: white" })</li>
                <li>@Html.ActionLink("Aktualności", "Index", "News", null, new { @style = "color: white" })</li>
                <li>@Html.ActionLink("Rodzaj towaru", "Index", "ProductType", null, new { @style = "color: white" })</li>
                <li>@Html.ActionLink("Towar", "Index", "Product", null, new { @style = "color: white" })</li>
                <li>@Html.ActionLink("Użytkownicy", "Index", "Users", null, new { @style = "color: white" })</li>
                <li>@Html.ActionLink("Klienci", "Index", "Clients", null, new { @style = "color: white" })</li>                
                <li>@Html.ActionLink("Faktury", "Index", "Factures", null, new { @style = "color: white" })</li>
                <li>@Html.ActionLink("Strona", "Index", "Page", null, new { @style = "color: white" })</li>
                
            </ul>
               @*  <i class="material-icons">menu</i>
                <i class="material-icons">News</i>    
                <i class="material-icons">ProductType</i></a>
                <i class="material-icons">Product</i></a>
                <i class="material-icons">Users</i></a>
                <i class="material-icons">Clients</i></a>
                <i class="material-icons">Factures</i></a>
                <i class="material-icons">Page</i></a> *@

    </nav>

        <div class="section no-pad-bot" id="index-banner">


            @RenderBody()

        </div>

        @RenderSection("Scripts", required: false)
        <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="~/lib/materialize/js/materialize.min.js"></script>

        <script>
            $(document).ready(function () {
                $('.button-collapse').sideNav();
            });
        </script>
</body>
</html>
